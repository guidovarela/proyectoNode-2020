
<div class="container">

<h2 class="mb-2">{{title}} al <time>{{dia}}/{{mes}}/{{anio}}</time></h2>
<hr class="mb-4">

    <div class="row align-items-stretch">
        {{#each noticias}}
            <div class="col-md-3 mb-3">
                <div class="noticia bg-dark text-light rounded-3">
                    <div>
                        <img class="img-fluid" src="/img/news/{{imagen}}.jpg" alt="{{titulo}}">
                    </div>
                    <div class="txt p-2 text-center">
                        <a href="/noticias/{{id}}" class="text-decoration-none text-white">
                            <h2 class="fs-6">{{titulo}}</h2>
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>